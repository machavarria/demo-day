<!doctype html>
<html>
<head>
    <title>Podcast AI Companion</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Podcast AI Companion</h1>
        <p class="lead">Welcome back, <%= user.local.email %></p>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- User information / Used Chatgpt to help with making the layout -->
        <div class="col-sm-4">
            <div class="well text-center">
                <h3><span class="fa fa-user"></span> Profile</h3>
                  <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-8">
        <div class="well">
          <h4 class="fa-archive">Past Summaries</h4>
          <div class="past-summaries">
          <% if (summaries && summaries.length > 0) { %>
              <% summaries.forEach(s => { %>
                <div class="summary-item">
                  <strong><%= new Date(s.dateOfSummary).toLocaleDateString() %>:</strong>
                  <p><%= s.summary %></p>
                </div>
             <% }) %>
            <% } else { %>
              <p>There are no summaries. Try it out now.</p>
           <% } %>
        </div>
        </div>
        </div>

        <div class="col-sm-8">
          <div class="well">
          <h3 class="fa-microphone">Summarize your Podcast</h3>
          <p>Paste your podcast transcript to get a summary</p>
          

          <form action="/summarize" method="POST" id="summarizePod">
            <div class="form-group">
            <textarea placeholder="Paste your transcript here" name="transcript" class="form-control" rows="8" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Create Summary</button>
          </form>
          </div>
        </div>
        



<script src="main.js"></script>

</body>
</html>
